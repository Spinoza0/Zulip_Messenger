<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="messenger_common">
        <attr name="background_200_color" format="color" />
        <attr name="background_250_color" format="color" />
        <attr name="background_300_color" format="color" />
        <attr name="background_400_color" format="color" />
        <attr name="background_500_color" format="color" />
        <attr name="background_700_color" format="color" />
        <attr name="text_200_color" format="color" />
        <attr name="text_300_color" format="color" />
        <attr name="text_500_color" format="color" />
        <attr name="text_700_color" format="color" />
        <attr name="text_800_color" format="color" />
        <attr name="text_900_color" format="color" />
    </declare-styleable>

    <declare-styleable name="reaction_view">
        <attr name="emoji" format="string" />
        <attr name="count" format="integer" />
        <attr name="size" format="dimension" />
    </declare-styleable>

    <declare-styleable name="flexbox_layout">
        <attr name="margin" format="dimension" />
        <attr name="gravity" format="integer">
            <flag name="start" value="0" />
            <flag name="center" value="1" />
            <flag name="end" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="message_view">
        <attr name="message_user_background_start_color" format="color" />
        <attr name="message_user_background_end_color" format="color" />
        <attr name="message_name_color" format="color" />
        <attr name="message_background_color" format="reference" />
        <attr name="message_type_is_user" format="boolean" />
        <attr name="reactions_gravity" format="integer">
            <flag name="start" value="0" />
            <flag name="center" value="1" />
            <flag name="end" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="channel">
        <attr name="channel_toolbar_background_color" format="color" />
        <attr name="channel_new_message_text_background_color" format="color" />
        <attr name="channel_date_background_color" format="color" />
        <attr name="channel_date_text_color" format="color" />
        <attr name="channel_add_reactions_top_line_color" format="color" />
        <attr name="channel_icon_circle_color" format="color" />
        <attr name="channel_icon_send_color" format="color" />
    </declare-styleable>

    <declare-styleable name="fragment_channels">
        <attr name="underline_color" format="color" />
        <attr name="even_topic_color" format="color" />
        <attr name="odd_topic_color" format="color" />
    </declare-styleable>

    <declare-styleable name="fragment_profile">
        <attr name="button_logout_color" format="color" />
    </declare-styleable>

</resources>