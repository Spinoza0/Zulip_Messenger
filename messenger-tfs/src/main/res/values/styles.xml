<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LoginLogoStyle">
        <item name="android:layout_width">128sp</item>
        <item name="android:layout_height">128sp</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="LoginTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/text_300_color</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LoginEditFieldStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shape_channel_new_message_text</item>
        <item name="android:textColor">?attr/text_300_color</item>
        <item name="android:textColorHint">?attr/text_300_color</item>
        <item name="android:visibility">gone</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="ChannelsTabStyle">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="ChannelsTopicStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">?attr/text_300_color</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ChannelItemStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginStart">22dp</item>
        <item name="android:layout_marginEnd">80dp</item>
        <item name="android:textColor">?attr/text_300_color</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SearchFieldStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/background_500_color</item>
        <item name="android:drawableEnd">@drawable/ic_search</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableTint">?attr/text_200_color</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">50dp</item>
        <item name="android:paddingEnd">28dp</item>
        <item name="android:textColor">?attr/text_200_color</item>
        <item name="android:textColorHint">?attr/text_200_color</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="ChannelSearchUnderlineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">90dp</item>
        <item name="android:background">?attr/background_250_color</item>
    </style>

    <style name="PeopleRecyclerViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>

    <style name="PeopleShimmerStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="MessagesTopicTitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/background_500_color</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">36dp</item>
        <item name="android:paddingEnd">36dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">?attr/text_500_color</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MessagesRecyclerViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="MessagesEditTopicNameStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:background">@drawable/shape_channel_new_message_text</item>
        <item name="android:textColor">?attr/text_300_color</item>
        <item name="android:textColorHint">?attr/text_300_color</item>
        <item name="android:hint">@string/topic_name</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="MessagesEditMessageStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:hint">@string/write_message</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:maxLines">3</item>
        <item name="android:background">@drawable/shape_channel_new_message_text</item>
        <item name="android:textColor">?attr/text_300_color</item>
        <item name="android:textColorHint">?attr/text_300_color</item>
    </style>

    <style name="MessagesImageActionStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:background">?attr/background_500_color</item>
    </style>

    <style name="ToolbarTitleStyle">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="MenuItemStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textColor">?attr/text_300_color</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">56dp</item>
        <item name="android:paddingEnd">56dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/text_200_color</item>
        <item name="android:backgroundTint">?attr/background_600_color</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">gone</item>
    </style>

</resources>