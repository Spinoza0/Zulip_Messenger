<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ChannelsTabStyle">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="ChannelsTopicStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">?attr/text_300_color</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ChannelItemStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginStart">22dp</item>
        <item name="android:layout_marginEnd">80dp</item>
        <item name="android:textColor">?attr/text_300_color</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ChannelSearchEditFieldStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/background_500_color</item>
        <item name="android:drawableEnd">@drawable/ic_search</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableTint">?attr/text_200_color</item>
        <item name="android:hint">@string/search</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">50dp</item>
        <item name="android:paddingEnd">28dp</item>
        <item name="android:textColor">?attr/text_200_color</item>
        <item name="android:textColorHint">?attr/text_200_color</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="ChannelSearchUnderlineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">90dp</item>
        <item name="android:background">?attr/background_250_color</item>
    </style>

    <style name="ToolbarTitleStyle">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="MenuItemStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textColor">?attr/text_300_color</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">56dp</item>
        <item name="android:paddingEnd">56dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/text_200_color</item>
        <item name="android:backgroundTint">?attr/background_600_color</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">gone</item>
    </style>

</resources>