<resources>
    <!-- Base application theme. -->
    <style name="Theme.Tfsandroidspring2023" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Common messenger colors -->
        <item name="background_200_color">@color/background_200</item>
        <item name="background_300_color">@color/background_300</item>
        <item name="background_400_color">@color/background_400</item>
        <item name="background_500_color">@color/background_500</item>
        <item name="background_700_color">@color/background_700</item>
        <item name="text_200_color">@color/text_200</item>
        <item name="text_300_color">@color/text_300</item>
        <item name="text_500_color">@color/text_500</item>
        <item name="text_700_color">@color/text_700</item>
        <item name="text_800_color">@color/text_800</item>
        <item name="text_900_color">@color/text_900</item>

        <!-- MessageView -->
        <item name="message_user_background_start_color">@color/message_user_background_start</item>
        <item name="message_user_background_end_color">@color/message_user_background_end</item>
        <item name="message_name_color">@color/message_name</item>

        <!-- Channel -->
        <item name="channel_toolbar_background_color">@color/channel_toolbar_background</item>
        <item name="channel_new_message_text_background_color">
            @color/channel_new_message_text_background
        </item>
        <item name="channel_date_background_color">@color/channel_date_background</item>
        <item name="channel_date_text_color">@color/channel_date_text</item>
        <item name="channel_add_reactions_top_line_color">@color/channel_add_reactions_top_line
        </item>
        <item name="channel_icon_circle_color">@color/channel_icon_circle</item>
        <item name="channel_icon_send_color">@color/channel_icon_send</item>

        <!-- Fragment Channels -->
        <item name="underline_color">@color/underline</item>
        <item name="even_topic_color">@color/even_topic</item>
        <item name="odd_topic_color">@color/odd_topic</item>

        <!-- Fragment People -->
        <item name="circle_border_color">@color/circle_border</item>
        <item name="circle_active_color">@color/circle_active</item>
        <item name="circle_inactive_color">@color/circle_inactive</item>

    </style>
</resources>