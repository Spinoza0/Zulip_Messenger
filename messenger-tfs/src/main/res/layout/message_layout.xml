<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="com.spinoza.messenger_tfs.presentation.ui.MessageLayout">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:contentDescription="@string/avatar" />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_message_top" />

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_message_bottom" />

    <com.spinoza.messenger_tfs.presentation.ui.FlexBoxLayout
        android:id="@+id/reaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</merge>