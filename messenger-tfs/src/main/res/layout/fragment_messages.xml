<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/channel_background_color"
    tools:context=".presentation.fragment.MessagesFragment">

    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/channel_toolbar_background_color"
        android:navigationIcon="@drawable/ic_arrow_back"
        android:title="@string/channel_toolbar_text"
        android:titleTextColor="?attr/channel_toolbar_text_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewMessages"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginVertical="20dp"
        app:layout_constraintBottom_toTopOf="@id/textInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintVertical_bias="0.45"
        tools:listitem="@layout/message_item" />

    <LinearLayout
        android:id="@+id/textInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="6dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:boxBackgroundColor="?attr/channel_new_message_background_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_channel_new_message_text"
            android:inputType="text"
            android:maxLines="5"
            android:paddingHorizontal="20dp"
            android:paddingVertical="16dp"
            android:textColor="?attr/channel_new_message_text_color"
            tools:text="@tools:sample/full_names" />

        <ImageView
            android:id="@+id/imageViewAction"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_marginStart="12dp"
            android:background="?attr/channel_new_message_background_color"
            android:src="@drawable/ic_add_circle_outline" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>