<?xml version="1.1" encoding="utf-8"?>
<resources>
    <style name="TFS.Theme.ShapeAppearanceOverlay.AvatarImageView" parent="">
        <item name="cornerSize">12%</item>
    </style>

    <style name="TFS.Theme.ShapeAppearanceOverlay.CircledPhoto" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <declare-styleable name="UserNetworkStatusView">
        <attr name="onlineColor" format="color" />
        <attr name="offlineColor" format="color" />
        <attr name="idleColor" format="color" />

        <attr name="statusTextSize" format="dimension" />
        <attr name="networkStatus" format="enum">
            <enum name="ONLINE" value="0" />
            <enum name="OFFLINE" value="1" />
            <enum name="IDLE" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="SearchToolbar">
        <attr name="accentColor" format="color" />
        <attr name="backgroundColor" format="color" />
        <attr name="normalColor" format="color" />

        <attr name="title" format="string"/>
        <attr name="searchState" format="enum">
            <enum name="IDLE" value="0" />
            <enum name="SEARCH" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="AvatarView">
        <attr name="initialsSize" format="dimension" />
        <attr name="initialsColor" format="color" />

        <attr name="strokeWidth" format="dimension"/>
        <attr name="strokeColor" format="color" />

        <attr name="badgeRadius" format="dimension" />
        <attr name="badgeColor" format="color" />
        <attr name="hasBadge" format="boolean" />

        <attr name="fillColor" format="color" />
        <attr name="initials" format="string" />
        <attr name="src" format="reference" />
    </declare-styleable>

    <declare-styleable name="HorizontalLineView">
        <attr name="lineColor" format="color" />
    </declare-styleable>

</resources>
