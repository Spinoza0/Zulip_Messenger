<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/shimmer_avatar_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="@dimen/user_item_avatar_view_size"
        android:layout_height="@dimen/user_item_avatar_view_size"
        android:background="?attr/colorButtonNormal"
        app:shapeAppearanceOverlay="@style/TFS.Theme.ShapeAppearanceOverlay.CircledPhoto"/>

    <LinearLayout
        android:layout_marginStart="@dimen/user_item_avatar_view_right_margin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/shimmer_avatar_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/full_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/user_item_user_name_text_size"
            android:maxLines="1"
            android:background="@drawable/shimmer_text_view"
            android:layout_marginBottom="@dimen/user_item_shimmer_email_name_spacing" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/email_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/user_item_user_email_text_size"
            android:maxLines="1"
            android:background="@drawable/shimmer_text_view" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>