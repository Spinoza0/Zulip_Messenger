<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/shimmer_item_stream_padding">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/shimmer_item_stream_stream_name_height"
        android:background="@drawable/shimmer_text_view" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/shimmer_item_stream_topic_name_height"
        android:background="@drawable/shimmer_text_view"
        android:layout_marginStart="@dimen/shimmer_item_stream_topics_right_margin"
        android:layout_marginTop="@dimen/shimmer_item_stream_stream_and_topic_spacing"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/shimmer_item_stream_topic_name_height"
        android:background="@drawable/shimmer_text_view"
        android:layout_marginStart="@dimen/shimmer_item_stream_topics_right_margin"
        android:layout_marginTop="@dimen/shimmer_item_stream_topics_spacing"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/shimmer_item_stream_topic_name_height"
        android:background="@drawable/shimmer_text_view"
        android:layout_marginStart="@dimen/shimmer_item_stream_topics_right_margin"
        android:layout_marginTop="@dimen/shimmer_item_stream_topics_spacing"/>
</LinearLayout>
